    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run release executable 'flappy_bird'",
            "cargo": {
                "args": [
                    "run",
                    "--bin=flappy_bird",
                    "--package=flappy_bird",
                    "--release",
                    "--features",
                    "bevy/dynamic"
                ],
                "filter": {
                    "name": "flappy_bird",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'flappy_bird'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=flappy_bird",
                    "--package=flappy_bird"
                ],
                "filter": {
                    "name": "flappy_bird",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'flappy_bird'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=flappy_bird",
                    "--package=flappy_bird"
                ],
                "filter": {
                    "name": "flappy_bird",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}